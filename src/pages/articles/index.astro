---
import Base from '../../layouts/Base.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('articles');
---
<Base title="Ole Hylland Spjeldnæs — Articles">
  <header class="mb-8">
    <h1 class="text-2xl font-semibold">Articles</h1>
    <p class="text-slate-300">Longer‑form writing.</p>
  </header>
  <section class="space-y-6">
    <ul class="space-y-3">
      { posts.map((post) => (
        <li>
          <a class="font-medium" href={`/articles/${post.data.slug}`}>
            {post.data.title}
          </a>
          <div class="text-sm text-slate-500">{new Date(post.data.published).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}{post.data.summary && ` — ${post.data.summary}`}</div>
        </li>
      )) }
    </ul>
  </section>
</Base>


