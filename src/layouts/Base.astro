---
import '../styles/tailwind.css';
export interface Props {
  title?: string;
  description?: string;
}
const { title = 'Brandur — Placeholder', description = 'A minimal static site.' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en" class="dark" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Source+Serif+4:ital,opsz,wght@0,8..60,400;0,8..60,600;1,8..60,400&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/src/pages/_app.css" />
    <link rel="alternate" type="application/atom+xml" href="/articles.atom" />
  </head>
  <body class="min-h-screen bg-site text-slate-100">
    <header class="sticky top-0 z-40 bg-site text-white">
      <div class="mx-auto max-w-5xl px-4 py-4 flex items-center justify-between">
        <a href="/" class="font-medium opacity-90 hover:opacity-100">Ole Hylland Spjeldnæs</a>
      </div>
    </header>
    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>
    
  </body>
  
</html>


